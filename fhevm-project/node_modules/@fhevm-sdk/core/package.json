{
  "name": "@fhevm-sdk/core",
  "version": "0.1.6",
  "description": "Core FHEVM SDK - universal encryption and execution engine",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --treeshake",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@zama-fhe/relayer-sdk": "^0.2.0",
    "ethers": "^6.15.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@vitest/coverage-v8": "2.1.9",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "~2.1.9"
  },
  "license": "BSD-3-Clause-Clear",
  "publishConfig": {
    "access": "public"
  }
}
